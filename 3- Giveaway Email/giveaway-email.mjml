      </mj-column>
    </mj-section>
    <mj-section>
    	<mj-column>
      	<mj-button mj-class='text-size' background-color='#6366F1' inner-padding='10px 30px' href='#button-link' padding-top='0' ><span style='color:#fff;'>Share with friends for virality</span></mj-button>
      </mj-column>
    </mj-section>
    <mj-section padding-top='0'>
    	<mj-column>
